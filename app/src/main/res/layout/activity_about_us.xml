<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/toolbar_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/toolbar_color"
            android:layout_marginTop="15dp">

            <!-- Profile Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/toolbar_color"
                android:elevation="4dp"
                >

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/profile_img"
                    android:src="@drawable/demoimg2"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/aboutUsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us_title"
                android:textSize="30sp"
                android:layout_marginStart="20dp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/circle_background"
            android:padding="20dp">

            <!-- About The App Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="45dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/toolbar_color"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/pdf_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_logo"
                    android:src="@drawable/whatsapp_img"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/aboutAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_the_app"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:id="@+id/aboutAppDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                tools:ignore="VisualLintLongText" />

            <!-- Contact Info -->
            <TextView
                android:id="@+id/contactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- App Version -->
            <TextView
                android:id="@+id/connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_with_me"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />


            <!-- Social Media Links -->
            <LinearLayout
                android:id="@+id/socialLinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/linkedin_link"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:contentDescription="@string/linkedin_img"
                    android:src="@drawable/linkedin_icon"

                    />

                <ImageView
                    android:id="@+id/github_link"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/github_img"
                    android:src="@drawable/github_logo"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>


</LinearLayout>